{
  "extends": "../../tsconfig.mapbox.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@mapLib/*": [
        "packages/mapbox/src/adapter/*"
      ]
    }
  },
  "include": [
    "../../src",
    "../../*.d.ts",
    "../../*.ts",
    "../../*.svelte"
  ],
  "exclude": [
    "../../node_modules",
    "./dist",
    "../../src/core/map/maplibre",
    "../../tests"
  ]
}
