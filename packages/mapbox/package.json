{
  "name": "@geoman-io/mapbox-geoman-free",
  "private": false,
  "version": "0.6.3",
  "type": "module",
  "description": "A Mapbox Plugin For Drawing and Editing Geometry Layers",
  "homepage": "https://geoman.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/geoman-io/maplibre-geoman.git"
  },
  "author": {
    "name": "Geoman.io",
    "email": "sales@geoman.io",
    "url": "https://geoman.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geoman-io/maplibre-geoman/issues"
  },
  "module": "dist/mapbox-geoman.es.js",
  "main": "dist/mapbox-geoman.umd.js",
  "types": "dist/mapbox-geoman.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mapbox-geoman.d.ts",
      "import": "./dist/mapbox-geoman.es.js",
      "require": "./dist/mapbox-geoman.umd.js"
    },
    "./dist/mapbox-geoman.css": "./dist/mapbox-geoman.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite ../.. --config vite.config.ts",
    "build": "rimraf dist && vite build --config vite.config.ts && npm run build:types && node ../../scripts/verify-variant-bundle.mjs mapbox dist",
    "testserver": "vite ../.. --config vite.config.ts --host 127.0.0.1 --port 4001 --mode test",
    "build:types": "tsc -p tsconfig.types.json --emitDeclarationOnly && tsc-alias -p tsconfig.types.json && rollup -c rollup.config.dts.js && node ../../scripts/verify-variant-types.mjs mapbox dist/mapbox-geoman.d.ts && rimraf dist/types",
    "ts": "tsc --noEmit -p ../../tsconfig.mapbox.json",
    "lint": "eslint src",
    "pack": "npm run build && npm pack"
  },
  "dependencies": {
    "@types/geojson": "^7946.0.16",
    "lodash-es": "^4.17.23",
    "type-fest": "^5.4.4"
  },
  "peerDependencies": {
    "mapbox-gl": ">=3.18.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
