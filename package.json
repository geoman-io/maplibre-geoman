{
  "name": "@geoman-io/maplibre-geoman-workspace",
  "private": true,
  "workspaces": [
    "apps/dev",
    "packages/core",
    "packages/maplibre",
    "packages/mapbox"
  ],
  "version": "0.6.3",
  "packageManager": "npm@11.2.0",
  "type": "module",
  "description": "Workspace and tooling for Geoman MapLibre/Mapbox packages",
  "homepage": "https://geoman.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/geoman-io/maplibre-geoman.git"
  },
  "author": {
    "name": "Geoman.io",
    "email": "sales@geoman.io",
    "url": "https://geoman.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geoman-io/maplibre-geoman/issues"
  },
  "scripts": {
    "turbo": "turbo",
    "build:all": "turbo run build --filter=@geoman-io/maplibre-geoman-free --filter=@geoman-io/mapbox-geoman-free",
    "typecheck:all": "turbo run ts --filter=@geoman-io/maplibre-geoman-free --filter=@geoman-io/mapbox-geoman-free",
    "lint:all": "turbo run lint",
    "workspace:validate": "node scripts/validate-workspace.mjs",
    "api:check": "node scripts/check-api-surface.mjs",
    "api:update": "node scripts/check-api-surface.mjs --write",
    "version:bump": "node scripts/bump-version.mjs",
    "dev": "npm run dev:maplibre",
    "dev:maplibre": "turbo run dev --filter=@geoman-io/maplibre-geoman-free",
    "dev:mapbox": "turbo run dev --filter=@geoman-io/mapbox-geoman-free",
    "ts-watch": "tsc --noEmit --watch -p tsconfig.maplibre.json",
    "ts:autofix": "ts-autofix",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "formatter": "oxfmt --check apps tests packages scripts '!packages/**/dist/**'",
    "formatter:fix": "oxfmt apps tests packages scripts '!packages/**/dist/**'",
    "check": "npm run formatter && npm run workspace:validate && npm run lint:all && npm run typecheck:all && npm run test:unit",
    "clean:artifacts": "rimraf dist pub",
    "testserver": "npm run testserver:maplibre",
    "testserver:maplibre": "turbo run testserver --filter=@geoman-io/maplibre-geoman-free",
    "testserver:mapbox": "turbo run testserver --filter=@geoman-io/mapbox-geoman-free",
    "test": "npm run test:maplibre",
    "test:all": "npm run test:maplibre && npm run test:mapbox",
    "test:unit": "turbo run test:unit --filter=@geoman-io/geoman-core",
    "test:maplibre": "cross-env PLAYWRIGHT_VARIANT=maplibre playwright test",
    "test:mapbox": "cross-env PLAYWRIGHT_VARIANT=mapbox playwright test",
    "test:headed": "cross-env PLAYWRIGHT_VARIANT=maplibre playwright test --headed",
    "test:ui": "cross-env PLAYWRIGHT_VARIANT=maplibre playwright test --ui",
    "test:debug": "cross-env PLAYWRIGHT_VARIANT=maplibre playwright test --debug",
    "prepare": "husky && shx test -f packages/maplibre/dist/maplibre-geoman.es.js || npm run build -w @geoman-io/maplibre-geoman-free"
  },
  "dependencies": {
    "@turf/area": "^7.3.4",
    "@turf/bbox": "^7.3.4",
    "@turf/bearing": "^7.3.4",
    "@turf/boolean-intersects": "^7.3.4",
    "@turf/boolean-point-in-polygon": "^7.3.4",
    "@turf/boolean-point-on-line": "^7.3.4",
    "@turf/boolean-valid": "^7.3.4",
    "@turf/buffer": "^7.3.4",
    "@turf/centroid": "^7.3.4",
    "@turf/circle": "^7.3.4",
    "@turf/clone": "^7.3.4",
    "@turf/combine": "^7.3.4",
    "@turf/destination": "^7.3.4",
    "@turf/difference": "^7.3.4",
    "@turf/distance": "^7.3.4",
    "@turf/flatten": "^7.3.4",
    "@turf/helpers": "^7.3.4",
    "@turf/invariant": "^7.3.4",
    "@turf/length": "^7.3.4",
    "@turf/line-intersect": "^7.3.4",
    "@turf/line-split": "^7.3.4",
    "@turf/line-to-polygon": "^7.3.4",
    "@turf/meta": "^7.3.4",
    "@turf/polygon-to-line": "^7.3.4",
    "@turf/rewind": "^7.3.4",
    "@turf/transform-rotate": "^7.3.4",
    "@turf/transform-scale": "^7.3.4",
    "@turf/union": "^7.3.4",
    "@turf/unkink-polygon": "^7.3.4",
    "dompurify": "^3.3.1",
    "lodash-es": "^4.17.23",
    "loglevel": "^1.9.2",
    "type-fest": "^5.4.4"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.3.1",
    "cross-env": "^10.1.0",
    "husky": "^9.1.7",
    "mapbox-gl": "^3.18.1",
    "maplibre-gl": "^5.19.0",
    "oxfmt": "^0.35.0",
    "oxlint": "^1.50.0",
    "playwright": "1.58.2",
    "rimraf": "^6.1.2",
    "rollup-plugin-dts": "^6.3.0",
    "sass": "^1.97.3",
    "shx": "^0.4.0",
    "svelte": "^5.53.5",
    "svelte-preprocess": "^6.0.3",
    "ts-autofix": "^1.0.0",
    "tsc-alias": "^1.8.16",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-svg-loader": "^5.1.0",
    "vitest": "^3.2.4"
  },
  "overrides": {
    "ajv": "6.14.0"
  }
}
