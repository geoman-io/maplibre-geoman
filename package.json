{
  "name": "@geoman-io/maplibre-geoman-workspace",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/maplibre",
    "packages/mapbox"
  ],
  "version": "0.6.3",
  "type": "module",
  "description": "Workspace and tooling for Geoman MapLibre/Mapbox packages",
  "homepage": "https://geoman.io",
  "repository": {
    "type": "git",
    "url": "git://github.com/geoman-io/maplibre-geoman.git"
  },
  "author": {
    "name": "Geoman.io",
    "email": "sales@geoman.io",
    "url": "https://geoman.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/geoman-io/maplibre-geoman/issues"
  },
  "scripts": {
    "turbo": "npx turbo",
    "build:all": "npm run build -w @geoman-io/maplibre-geoman-free && npm run build -w @geoman-io/mapbox-geoman-free",
    "typecheck:all": "npm run ts -w @geoman-io/maplibre-geoman-free && npm run ts -w @geoman-io/mapbox-geoman-free",
    "lint:all": "npm run lint -w @geoman-io/maplibre-geoman-free && npm run lint -w @geoman-io/mapbox-geoman-free",
    "workspace:validate": "node scripts/validate-workspace.mjs",
    "api:check": "node scripts/check-api-surface.mjs",
    "api:update": "node scripts/check-api-surface.mjs --write",
    "version:bump": "node scripts/bump-version.mjs",
    "dev": "cross-env VITE_BASE_MAP=maplibre vite",
    "dev:mapbox": "cross-env VITE_BASE_MAP=mapbox vite",
    "ts-watch": "tsc --noEmit --watch -p tsconfig.maplibre.json",
    "ts:autofix": "ts-autofix",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "formatter": "prettier src tests --check",
    "formatter:fix": "prettier src tests --write",
    "check": "npm run formatter:fix && npm run workspace:validate && npm run lint:all && npm run typecheck:all",
    "testserver": "vite --host 127.0.0.1 --port 4000 --mode test",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "prepare": "husky && shx test -f packages/maplibre/dist/maplibre-geoman.es.js || npm run build -w @geoman-io/maplibre-geoman-free"
  },
  "dependencies": {
    "@turf/area": "^7.3.4",
    "@turf/bbox": "^7.3.4",
    "@turf/bearing": "^7.3.4",
    "@turf/boolean-intersects": "^7.3.4",
    "@turf/boolean-point-in-polygon": "^7.3.4",
    "@turf/boolean-point-on-line": "^7.3.4",
    "@turf/boolean-valid": "^7.3.4",
    "@turf/buffer": "^7.3.4",
    "@turf/centroid": "^7.3.4",
    "@turf/circle": "^7.3.4",
    "@turf/clone": "^7.3.4",
    "@turf/combine": "^7.3.4",
    "@turf/destination": "^7.3.4",
    "@turf/difference": "^7.3.4",
    "@turf/distance": "^7.3.4",
    "@turf/flatten": "^7.3.4",
    "@turf/helpers": "^7.3.4",
    "@turf/invariant": "^7.3.4",
    "@turf/length": "^7.3.4",
    "@turf/line-intersect": "^7.3.4",
    "@turf/line-split": "^7.3.4",
    "@turf/line-to-polygon": "^7.3.4",
    "@turf/meta": "^7.3.4",
    "@turf/polygon-to-line": "^7.3.4",
    "@turf/rewind": "^7.3.4",
    "@turf/transform-rotate": "^7.3.4",
    "@turf/transform-scale": "^7.3.4",
    "@turf/union": "^7.3.4",
    "@turf/unkink-polygon": "^7.3.4",
    "dompurify": "^3.3.1",
    "lodash-es": "^4.17.23",
    "loglevel": "^1.9.2",
    "type-fest": "^5.4.4"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "1.58.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^25.2.2",
    "cross-env": "^10.1.0",
    "eslint": "^10.0.1",
    "eslint-plugin-svelte": "^3.15.0",
    "globals": "^17.3.0",
    "husky": "^9.1.7",
    "mapbox-gl": "^3.18.1",
    "maplibre-gl": "^5.19.0",
    "playwright": "1.58.2",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "rollup-plugin-dts": "^6.3.0",
    "sass": "^1.97.3",
    "shx": "^0.4.0",
    "svelte": "^5.50.0",
    "svelte-preprocess": "^6.0.3",
    "typescript-eslint": "^8.56.0",
    "ts-autofix": "^1.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-svg-loader": "^5.1.0"
  },
  "overrides": {
    "ajv": "6.14.0",
    "@typescript-eslint/typescript-estree": {
      "minimatch": "^10.2.1"
    }
  }
}
