{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "package-lock.json",
    "turbo.json"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "*.tgz"
      ]
    },
    "build:types": {
      "dependsOn": [
        "^build:types"
      ],
      "outputs": [
        "dist/*.d.ts"
      ]
    },
    "ts": {
      "dependsOn": [
        "^ts"
      ],
      "outputs": []
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "outputs": []
    },
    "test": {
      "cache": false,
      "dependsOn": [
        "build"
      ],
      "outputs": [
        "playwright-report/**",
        "test-results/**"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "testserver": {
      "cache": false,
      "persistent": true
    }
  }
}
