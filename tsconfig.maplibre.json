{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "packages/core/src/*"
      ],
      "@dev/*": [
        "apps/dev/*"
      ],
      "@tests/*": [
        "tests/*"
      ],
      "@mapLib/*": [
        "packages/maplibre/src/adapter/*"
      ]
    }
  },
  "include": [
    "packages/core/src",
    "packages/maplibre/src",
    "apps",
    "tests",
    "*.d.ts",
    "*.ts",
    "*.svelte"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "packages/mapbox/src/adapter"
  ]
}
